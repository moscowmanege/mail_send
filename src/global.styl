body
	margin 0
	padding 0

table
	margin 0
	padding 0
	padding-left 5px
	padding-right 5px
	font-family Arial
	font-size 12pt
	a
		color black
		text-decoration none
		font-weight bold
	td
		padding-top 15px
		vertical-align top
	.line td
		padding-top 30px
		width 650px
		hr
			padding 0
			margin 0
	.image img
		width 100%
		display block
	.image_desc td
		padding-top 30px
		span
			display inline-block
			border-bottom 1px solid black
	.image_alt td
		padding-top 0px

.header_block
	width 650px
	td
		padding-top 0
	.logo
		width 120px
		img
			width 100%
	.h1
		font-size 16pt
		font-weight bold
	.h2
		line-height 16pt


.content_block
	width 650px
	.title
		&.h1
			font-size 18pt
		&.h2
			font-weight bold
		&.head td.head
				font-weight bold
		&.desc td.desc
				font-weight bold
	.spacer
		height 20px
	.category
		width 320px
		vertical-align bottom
		border-bottom 1px solid black
	.val span
		display inline-block
		vertical-align bottom
		border-bottom 1px solid black
		font-weight bold
	.addon
		vertical-align bottom
		padding-left 15px


.footer_block
	width 650px
	padding-bottom 30px
	td
		width 320px
		vertical-align bottom
	.intro
		font-weight bold