body
	margin 0
	padding 0

table
	margin 0
	padding 0
	padding-left 5px
	padding-right 5px
	font-family Arial
	a
		color black
		text-decoration none
		font-weight bold
	td
		padding-top 15px
		vertical-align top
	.line td
		padding-top 30px
		width 100%
		border-bottom 4px solid black
	.image
		img
			width 100%
			display block
	.image_desc td
		display inline-block
		border-bottom 1px solid black
		padding-top 30px
	.image_alt td
		padding-top 0px

.header_block
	width 640px
	td
		padding-top 0
	.logo
		width 120px
	.h1
		font-size 16pt
		font-weight bold
	.h2
		font-size 12pt
		line-height 16pt


.content_block
	// background-color green
	width 640px
	.title
		&.h1
			font-size 16pt
		&.h2
			font-size 12pt
			font-weight bold
		&.head td.head
				font-weight bold
		&.desc td.desc
				font-weight bold
	.spacer
		height 20px
	.category
		width 315px
		border-bottom 1px solid black
	.val
		border-bottom 1px solid black
		display inline-block
		font-weight bold
	.addon
		padding-left 15px


.footer_block
	width 640px
	padding-bottom 30px
	td
		width 315px
		vertical-align bottom