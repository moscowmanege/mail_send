table
  margin 0
  padding 0
  font-family Arial
  width 650px
  td
    padding-top 15px
    vertical-align top

.header_block
  .logo
    width 120px

.content_block
  .title
    &.h1
      font-size 18pt
    &.h2
      font-size 12pt
      font-weight bold
    &.head td.head
        font-weight bold
    &.desc td.desc
        font-weight bold

  .spacer
    height 20px

  .category
    width 280px
    border-bottom 1px solid black

  .val
    border-bottom 1px solid black
    display inline-block
    font-weight bold

  .addon
    padding-left 20px