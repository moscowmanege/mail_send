- var up = function(val) { return '<sup>' + val + '</sup>'; }

mixin title(title, desc)
	tr.title(class=attributes.style, class=attributes.bold)
		td.head(colspan= !desc ? '3': '')= title
		td.desc(colspan='2')= desc

mixin category(title, value, addon)
	tr
		td(class= title && 'category'): span= title && title + ':'
		td.val(colspan= !addon ? '2': ''): span!= value
		td.addon!= addon

mixin image(title, path)
	tr.image_desc
		td(colspan='3'): span= title
	if !production
		tr.image
			td(colspan='3'): img(src=path, alt=title)
	else
		tr.image
			td(colspan='3') ## место для картинки ##


mixin spacer(numb)
	each space in new Array(numb || 1)
		tr.spacer

mixin line()
	tr.line: td(colspan='3'): hr(size='4', color='black')
