extends ../../layout.jade

block styles
	include styles.css

block content
	+title('Адрес:', 'Манежная площадь, 1')(bold='desc')

	+category('метро', 'Охотный ряд')(bold=' ')
	+category(null, 'Александровский сад')(bold=' ')
	+category(null, 'Библиотека им. Ленина')(bold=' ')

	+title('Площадка', 'ЦВЗ «Манеж»')(bold='desc')
	+category('площадь с указанием фальш стен', '11078,1м' + sup('2'), 'Общая выставочная площадь')

	+line()

	+title('Зал выставочный (1 этаж)')

	+category('Площадь', '6187,0м' + sup('2'))

	+category('Высота потолков', '11600мм', 'до ферм')
	+category(null, '10400мм', 'до навесного потолка')
	+category(null, '2600мм', 'под балконом до навесного потолка')

	+category('Высота застройки', '8000мм', 'под фермами и навесным потолком')
