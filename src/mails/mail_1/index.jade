	+line()

	+image('Схема зала', 'img/01.png')
	+image('Помещение внутри (1 этаж)', 'img/02.jpg')
	+image('Проведение выставки Cosmoscow (1 этаж)', 'img/03.jpg')
	+image('Зал конференций (1 этаж)', 'img/04.jpg')