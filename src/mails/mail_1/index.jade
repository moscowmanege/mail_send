	+title('Зал конференций (1 этаж)')

	+category('Площадь', '155,6м' + sup('2'))
	+category('Высота потолков', '3800мм', 'до потолка')
	+category('Высота застройки', '3000мм')

	+title('Характеристика помещения')(style='h2')

	+category('возможность установки автомобиля', 'до 350шт', 'в зависимости' + br() + 'от габаритов и массы')
	+category('максимальная мощность', '2025кВт')
	+category('ограничение по звуку', '80dB')
	+category('регулировка температуры', '18-25 ̊С')
